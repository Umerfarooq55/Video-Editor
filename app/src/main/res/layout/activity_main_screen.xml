<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="med.umerfarooq.com.videoeditor.VideoFeatures.VideoTrimmer">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Video Editor"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/rate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_star_rate_white_18px"
            android:text="Rate"

            android:textColor="@color/white"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <ImageView
        android:id="@+id/share"
        android:layout_width="30dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_share_white_18px"
        android:text="Share"
        android:textColor="@color/white"

        android:layout_height="30dp"
        tools:ignore="ContentDescription" />


    <ImageButton
        android:id="@+id/fromstorage"
        android:layout_width="100dp"
        android:layout_height="100dp"


        android:layout_alignStart="@+id/share"
        android:layout_centerVertical="true"
        android:layout_marginStart="33dp"
        android:layout_weight="0.5"
        android:background="@drawable/reordercircle"
        android:elevation="22dp"
        android:src="@drawable/ic_photo_size_select_actual_black_24dp"
        android:text="Choose Video"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Choose Video"
    android:layout_below="@+id/fromstorage"
    android:textSize="16sp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="48dp"

    android:textStyle="bold"
    android:id="@+id/textView" />

    <ImageButton
        android:id="@+id/record"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="53dp"
        android:layout_weight="0.8"
        android:background="@drawable/galery"
        android:elevation="22dp"
        android:src="@drawable/record"
        android:text="Record"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

        "

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/record"
        android:layout_marginEnd="22dp"
        android:text="Record"
        android:textSize="16sp"
        android:textStyle="bold" />
    <FrameLayout
        android:id="@+id/adView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

    </FrameLayout>

</RelativeLayout>
