<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="med.umerfarooq.com.videoeditor.VideoFeatures.ShareVideo">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:titleMarginStart="85dp"
        android:titleTextColor="#ffffff"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <ImageButton
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_centerVertical="true"
        android:layout_marginStart="53dp"
        android:layout_weight="0.5"
        android:background="@drawable/reordercircle"
        android:elevation="22dp"
        android:src="@drawable/ic_save_black_24dp"
        android:text="Choose Video"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Video"
        android:layout_below="@+id/save"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"

        android:textStyle="bold"
        android:id="@+id/textView" />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="53dp"
        android:layout_weight="0.8"
        android:background="@drawable/galery"
        android:elevation="22dp"
        android:src="@drawable/ic_share_black_24dpsocial"
        android:text="Record"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

    "

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/share"
        android:layout_marginEnd="25dp"
        android:text="Share"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/textView5" />


    <Button
        android:id="@+id/finish"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="20dp"
        android:background="@color/black"
        android:elevation="22dp"
        android:text="Done"
        android:textColor="@color/white" />
</RelativeLayout>
